<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.LoginPage"
             Title="Bejelentkezés oldal">
    <VerticalStackLayout>
        <Label 
            Text="Adja meg az adatait!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Felhasználónév" x:Name="Username" ReturnType="Next" Completed="Username_OnCompleted" />
        <Entry Placeholder="Jelszó" IsPassword="True" x:Name="Password" Completed="Password_OnCompleted" />
        <Button Clicked="Button_OnClicked" Text="Bejelentkezés" />
    </VerticalStackLayout>
</ContentPage>